<%- model_class = ObjectiveA -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:jmi_number) %>:</strong></dt>
  <dd><%= @objective_a.jmi_number %></dd>
  <dt><strong><%= model_class.human_attribute_name(:organism_species) %>:</strong></dt>
  <dd><%= @objective_a.organism_species %></dd>
  <dt><strong><%= model_class.human_attribute_name(:admission_date) %>:</strong></dt>
  <dd><%= @objective_a.admission_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:spec_type) %>:</strong></dt>
  <dd><%= @objective_a.spec_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:source_of_bsia) %>:</strong></dt>
  <dd><%= @objective_a.source_of_bsia %></dd>
  <dt><strong><%= model_class.human_attribute_name(:primary_diagnosis) %>:</strong></dt>
  <dd><%= @objective_a.primary_diagnosis %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              objective_as_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_objective_a_path(@objective_a), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              objective_a_path(@objective_a),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
