<%= form_for @objective_a, :html => { :class => "form-horizontal objective_a" } do |f| %>

  <% if @objective_a.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@objective_a.errors.count, "error") %> prohibited this objective_a from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @objective_a.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :jmi_number, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :jmi_number, :class => 'form-control' %>
    </div>
    <%=f.error_span(:jmi_number) %>
  </div>
  <div class="form-group">
    <%= f.label :organism_species, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :organism_species, :class => 'form-control' %>
    </div>
    <%=f.error_span(:organism_species) %>
  </div>
  <div class="form-group">
    <%= f.label :admission_date, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :admission_date, :class => 'form-control' %>
    </div>
    <%=f.error_span(:admission_date) %>
  </div>
  <div class="form-group">
    <%= f.label :spec_type, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :spec_type, :class => 'form-control' %>
    </div>
    <%=f.error_span(:spec_type) %>
  </div>
  <div class="form-group">
    <%= f.label :source_of_bsia, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :source_of_bsia, :class => 'form-control' %>
    </div>
    <%=f.error_span(:source_of_bsia) %>
  </div>
  <div class="form-group">
    <%= f.label :primary_diagnosis, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :primary_diagnosis, :class => 'form-control' %>
    </div>
    <%=f.error_span(:primary_diagnosis) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                objective_as_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
