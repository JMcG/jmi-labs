<div class="welcome-container">
  
  <div class="form-group">
  <%= select("hospital", "name", @hospitals.collect{|h| ["#{h.id} - #{h.name}", h.id] }, {include_blank: ''}, {data: {placeholder: "Please enter your hospital #"}} ) %>
  </div>
  <%= link_to "Continue", shipments_path, :class => "btn btn-primary", :disabled => true, :id => "submit_hospital"%>

</div>

<%= content_for :js_init do %>
  <%= javascript_tag "JMI.hospitals.init();" %>
<% end -%>