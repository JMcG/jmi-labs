<div class="page-header">
  <h1>Shipments for <%= current_hospital.name %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Objective</th>
      <th>Isolates</th>
      <th>Created</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @shipments.each do |shipment| %>
      <tr>
        <td><%= link_to shipment.objective_name, shipment_path(shipment) %></td>
        <td><%= shipment.target_isolates %></td>
        <td><%= shipment.created_at.to_formatted_s(:short) %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_shipment_path(shipment), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      shipment_path(shipment),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_shipment_path,
            :class => 'btn btn-primary' %>